<h1>Create a Cat! </h1>
<form action="<%= cats_url %>" method="post">
  <label for="name">Name:</label>
  <input id="name" type="text" name="cat[name]">
  <br>
  <label for="sex">Sex:</label>
  M<input id="sex" type="radio" name="cat[sex]" value = "M">
  F<input id="sex" type="radio" name="cat[sex]" value = "F">
  <br>
  <label for="color">Color:</label>
  <select id="color" name="cat[color]">
    <option disabled selected>--Color--</option>
    <option value="brown">Brown</option>
    <option value="black">Black</option>
    <option value="white">White</option>
  </select>
  <br>
  <label for="birthdate">Birthday:</label>
  <input id="birthdate" type="date" name="cat[birth_date]">
  <br>
  <label >Description:
    <br>
    <textarea name="cat[description]"></textarea>
  </label>
  <br>
  <br>
  <input type="submit" value="Submit Cat">
</form>
